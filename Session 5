import numpy as np
from tabulate import tabulate
import math

def main():
	x = np.linspace(0.0, 2 * math.pi, 1000)
	thetable = []

	for i in x:
		y = math.sin(i)
		thetable.append((i,y))

	header = ["x", "sin(x)"]

	print(tabulate(thetable, headers = header, tablefmt = "grid", floatfmt = ".3f"))


if __name__ == "__main__":
	main()
